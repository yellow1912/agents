{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Second Opinion Review Schema",
  "description": "External AI review report (e.g., from Gemini)",
  "type": "object",
  "required": ["scope", "reviewer", "reviewed_at"],
  "properties": {
    "scope": {
      "type": "string",
      "description": "The artifact or area being reviewed"
    },
    "reviewer": {
      "type": "string",
      "enum": ["gemini", "gpt", "other", "human"],
      "description": "Who/what performed the review"
    },
    "risk_level": {
      "type": "string",
      "enum": ["low", "medium", "high", "critical", "unknown"],
      "description": "Risk level at time of review"
    },
    "concerns": {
      "type": "array",
      "items": {"type": "string"},
      "description": "List of concerns or issues identified"
    },
    "suggestions": {
      "type": "array",
      "items": {"type": "string"},
      "description": "List of improvement suggestions"
    },
    "security_issues": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"]
          },
          "description": {"type": "string"},
          "recommendation": {"type": "string"}
        }
      },
      "description": "Security-specific issues found"
    },
    "verdict": {
      "type": "string",
      "enum": ["approve", "approve_with_notes", "needs_changes", "reject", "pending"],
      "description": "Overall recommendation"
    },
    "verdict_reason": {
      "type": "string",
      "description": "Explanation for the verdict"
    },
    "reviewed_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the review was performed"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "completed", "error"],
      "description": "Status of the review"
    }
  }
}
