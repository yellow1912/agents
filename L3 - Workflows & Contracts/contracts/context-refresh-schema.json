{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Context Refresh Report Schema",
  "description": "Report from Context7 MCP documentation fetch",
  "type": "object",
  "required": ["topic", "source", "fetched_at"],
  "properties": {
    "topic": {
      "type": "string",
      "description": "The library, framework, or topic documentation was fetched for"
    },
    "source": {
      "type": "string",
      "enum": ["context7", "manual", "other"],
      "description": "Source of the documentation"
    },
    "source_url": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "URL where documentation was fetched from"
    },
    "summary": {
      "type": "string",
      "description": "Summary of key APIs, patterns, or information fetched"
    },
    "key_apis": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {"type": "string"},
          "description": {"type": "string"},
          "example": {"type": "string"}
        }
      },
      "description": "List of key APIs or functions discovered"
    },
    "version": {
      "type": "string",
      "description": "Version of the library/framework documented"
    },
    "fetched_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the documentation was fetched"
    },
    "for_stage": {
      "type": ["string", "null"],
      "enum": ["frontend_implementation", "backend_implementation", "ai_implementation", null],
      "description": "Which implementation stage this context is for"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "fetched", "error"],
      "description": "Status of the fetch operation"
    }
  }
}
