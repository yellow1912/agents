{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Frontend Implementation Report Schema",
  "type": "object",
  "required": [
    "components_implemented",
    "pages_created",
    "api_integrations",
    "state_management",
    "testing_coverage",
    "dependencies_added"
  ],
  "properties": {
    "components_implemented": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "path", "type"],
        "properties": {
          "name": {"type": "string"},
          "path": {"type": "string"},
          "type": {"type": "string", "examples": ["component", "page", "layout", "hook", "util"]},
          "description": {"type": "string"},
          "props": {"type": "array", "items": {"type": "object"}},
          "dependencies": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "pages_created": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "route", "description"],
        "properties": {
          "name": {"type": "string"},
          "route": {"type": "string"},
          "description": {"type": "string"},
          "protected": {"type": "boolean"},
          "components_used": {"type": "array", "items": {"type": "string"}}
        }
      }
    },
    "api_integrations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["endpoint", "method", "purpose"],
        "properties": {
          "endpoint": {"type": "string"},
          "method": {"type": "string", "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"]},
          "purpose": {"type": "string"},
          "used_in_components": {"type": "array", "items": {"type": "string"}},
          "error_handling": {"type": "string"}
        }
      }
    },
    "state_management": {
      "type": "object",
      "required": ["approach", "description"],
      "properties": {
        "approach": {
          "type": "string",
          "examples": ["Redux", "Zustand", "Context API", "React Query", "None"]
        },
        "description": {"type": "string"},
        "global_state_structure": {"type": "object"},
        "cache_strategy": {"type": "string"}
      }
    },
    "testing_coverage": {
      "type": "object",
      "required": ["unit_tests", "integration_tests"],
      "properties": {
        "unit_tests": {
          "type": "object",
          "properties": {
            "count": {"type": "number"},
            "coverage_percentage": {"type": "number"},
            "framework": {"type": "string"}
          }
        },
        "integration_tests": {
          "type": "object",
          "properties": {
            "count": {"type": "number"},
            "coverage_percentage": {"type": "number"},
            "framework": {"type": "string"}
          }
        },
        "accessibility_tests": {
          "type": "object",
          "properties": {
            "status": {"type": "string", "enum": ["passed", "failed", "not_run"]},
            "tool": {"type": "string"},
            "issues_found": {"type": "array", "items": {"type": "string"}}
          }
        }
      }
    },
    "performance_notes": {
      "type": "object",
      "properties": {
        "lighthouse_score": {"type": "number"},
        "code_splitting": {"type": "boolean"},
        "lazy_loading": {"type": "boolean"},
        "optimization_techniques": {"type": "array", "items": {"type": "string"}}
      }
    },
    "accessibility": {
      "type": "object",
      "properties": {
        "wcag_level": {"type": "string", "enum": ["A", "AA", "AAA"]},
        "keyboard_navigation": {"type": "boolean"},
        "screen_reader_support": {"type": "boolean"},
        "aria_labels": {"type": "boolean"}
      }
    },
    "dependencies_added": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version", "purpose"],
        "properties": {
          "name": {"type": "string"},
          "version": {"type": "string"},
          "purpose": {"type": "string"}
        }
      }
    },
    "known_issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["description", "severity"],
        "properties": {
          "description": {"type": "string"},
          "severity": {"type": "string", "enum": ["low", "medium", "high", "critical"]},
          "workaround": {"type": "string"}
        }
      }
    },
    "build_configuration": {
      "type": "object",
      "properties": {
        "bundler": {"type": "string"},
        "build_time_seconds": {"type": "number"},
        "bundle_size_kb": {"type": "number"}
      }
    }
  }
}
